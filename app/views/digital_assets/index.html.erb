<p id="notice"><%= notice %></p>

<h1>Digital Assets</h1>
<h1><%= current_digital_asset.ticker %></h1>

<div class="container-fluid">
   <!-- START DATATABLE  -->
   <div class="row">
      <div class="col-lg-12">
         <div class="panel panel-default">
            <div class="panel-heading">
               Data Tables |
               <small>Column Ordering</small>
            </div>
            <div class="panel-body">
               <table id="datatable2" class="table table-striped table-hover">
                  <thead>
                     <tr>
                        <th class="sort-alpha">Ticker</th>
                        <th class="sort-alpha">Name</th>
                        <th class="sort-numeric">Supply</th>
                        <th class="sort-numeric">Market Cap (USD)</th>
                        <th class="sort-numeric">Price (USD)</th>
                     </tr>
                  </thead>
                  <tbody>

                     <% @digital_assets.each do |digital_asset| %>
                       <tr>
                         <td><%= link_to digital_asset.name, digital_asset %> <%= digital_asset.ticker %></td>
                         <td><%= digital_asset.ticker %></td>
                         <td><%= number_with_delimiter(digital_asset.total_coin_supply, :delimiter => ',') %></td>
                         <td><%= number_with_delimiter(digital_asset.usd_string_marketcap, :delimiter => ',') %></td>
                         <td><%= number_with_delimiter(digital_asset.usd_string_price, :delimiter => ',') %></td>
                       </tr>
                     <% end %>

                  </tbody>
                  <tfoot>
                     <tr>
                        <th>
                           <input type="text" name="filter_rendering_engine" placeholder="Filter Ticker" class="form-control input-sm datatable_input_col_search" />
                        </th>
                        <th>
                           <input type="text" name="filter_browser" placeholder="Filter Name" class="form-control input-sm datatable_input_col_search" />
                        </th>
                        <th>
                           <input type="text" name="filter_platform" placeholder="Filter Supply" class="form-control input-sm datatable_input_col_search" />
                        </th>
                        <th>
                           <input type="text" name="filter_engine_version" placeholder="Filter Proof" class="form-control input-sm datatable_input_col_search" />
                        </th>
                        <th>
                           <input type="text" name="filter_css_grade" placeholder="Filter CSS grade" class="form-control input-sm datatable_input_col_search" />
                        </th>
                     </tr>
                  </tfoot>
               </table>
            </div>
         </div>
      </div>
   </div>
   <!-- END DATATABLE  -->
</div>
